@model EM.ViewModels.Employee.EmployeeSalaryVm
@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
@section CssHeader{
    @Scripts.Render("~/employee/css");
}
@section JsFooter{
    @Scripts.Render("~/employee/js");
    @Scripts.Render("~/employee/validate/js");
}

<div style="padding-top:10px; width:100%">
    <h4>Add new a Employee</h4>
    <hr />
    @using (Html.BeginForm("Create", "Employee", FormMethod.Post, new { htmlAttributes = new { @class = "" } }))
    {

        @*@Html.ValidationSummary(false, "", new { @class = "text-danger" })*@
        <div class="form-control-static">
            <table>
                <tr>
                    <td style="width:140px">
                        <label>First Name</label>
                    </td>
                    <td>
                        @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @type = "text", @class = "text-primary", @placeholder = "Enter first name..", @tabindex = "1" } })
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td style="font-size:0.8em">
                        @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                    </td>
                </tr>
            </table>
        </div>
        <div class="form-control-static">
            <table>
                <tr>
                    <td style="width:140px">
                        <label>Last Name</label>
                    </td>
                    <td>
                        @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @type = "text", @class = "text-primary", @placeholder = "Enter last name...", @tabindex = "2" } })
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td style="font-size:0.8em">
                        @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
